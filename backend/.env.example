NODE_ENV=development
PORT=3000

# Comma-separated list of allowed origins for CORS in production
# Example: https://app.example.com,https://admin.example.com
CORS_ALLOWED_ORIGINS=

# Application version (optional, defaults to package.json)
VERSION=

# Logging level: silent|error|warn|info|debug|trace
LOG_LEVEL=info

# Phone auth and OTP configuration
PHONE_OTP_REQUIRED=true
OTP_CODE_LENGTH=6
OTP_TTL_SECONDS=300

BETTER_AUTH_SECRET=secret_dta
# MySQL Database
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=app

# rate limiter 
RATE_LIMIT_WINDOW_SECONDS=15
RATE_LIMIT_MAX=100



